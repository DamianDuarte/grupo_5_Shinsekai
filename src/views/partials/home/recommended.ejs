    <div class="recommended-grid">
        <% products.forEach(product => { %>
            <div class="productContainer">
                <div class="product" data-pic="url('/img/products/<%= checkImg.forProduct(product.images) %>')">
                    <a href="/products/details/<%= product.id %>" class="link"></a>
                </div>
                <div class="productInfo">
                    <h5><%= product.name %></h5>
                    <h5>$<%= product.price %></h5>
                </div>
            </div>
        <% }) %>
    </div>
</section>