<div style="<%= (locals.loginErrors || locals.registerErrors) && 'display: block' %>" id="userAccess" class="userAccess">
 
    <div class="userAccess__content">
        <span class="close--userAccess">&times;</span>

        <div class="userAccess__content__quick">
            <button class="userAccess__content__quick--button" type="submit"><i class="fa-brands fa-google"></i></button>
            <button class="userAccess__content__quick--button" type="submit"><i class="fa-brands fa-facebook-square"></i></button>
            <button class="userAccess__content__quick--button" type="submit"><i class="fa-brands fa-twitter"></i></button>
        </div>

        <div class="userAccess__content__split">
            <div class="userAccess__content__split__login">
                <h3>Accede a tu cuenta</h3>

                <form action="/user/login" method="POST">
                    <input type="text" name="username" id="userName" placeholder="Usuario/Email" value="<%= locals.loginOld && loginOld.username %>" required>
                    <% if(locals.loginErrors && loginErrors.username) {%>
                        <p class="errorMsg"><%= loginErrors.username.msg %> </p>
                    <% } %>

                    <input type="password" name="password" id="password" placeholder="Contraseña" value="<%= locals.loginOld && loginOld.password %>" required>
                    <% if(locals.loginErrors && loginErrors.password) {%>
                        <p class="errorMsg"><%= loginErrors.password.msg %> </p>
                    <% } %>
                    <div class="checkbox">
                        <input type="checkbox" name="rememberMe" id="rememberMe" <%= (locals.loginOld && loginOld.rememberMe) && "checked" %>>
                        <label for="rememberMe">Recordarme</label>
                    </div>
                    <button type="submit">Acceder</button>
                </form>

                <a href="#">¿Olvidaste tu contraseña? ¡Click aquí!</a>
            </div>
            
            <hr>

            <div class="userAccess__content__split__register">
                <h3>Registrate</h3>

                <form action="/user/register" method="POST">
                    <input type="text" name="username" id="userName" placeholder="Nombre de usuario" value="<%= locals.registerOld && registerOld.username %>" required>
                    <% if(locals.registerErrors && registerErrors.username) {%>
                        <p class="errorMsg"><%= registerErrors.username.msg %> </p>
                    <% } %>

                    <input type="email" name="email" id="email" placeholder="Email" value="<%= locals.registerOld && registerOld.email %>" required>
                    <% if(locals.registerErrors && registerErrors.email) {%>
                        <p class="errorMsg"><%= registerErrors.email.msg %> </p>
                    <% } %>

                    <input type="password" name="password" id="password" placeholder="Contraseña" value="<%= locals.registerOld && registerOld.password %>" required>
                    <% if(locals.registerErrors && registerErrors.password) {%>
                        <p class="errorMsg"><%= registerErrors.password.msg %> </p>
                    <% } %>

                    <input type="password" name="v_password" id="v_password" placeholder="Repetir contraseña" value="<%= locals.registerOld && registerOld.v_password %>" required>
                    <% if(locals.registerErrors && registerErrors.v_password) {%>
                        <p class="errorMsg"><%= registerErrors.v_password.msg %> </p>
                    <% } %>

                    <div class="checkbox">
                        <input type="checkbox" name="terms" id="terms" <%= (locals.registerOld && registerOld.terms) && "checked" %>>
                        <label for="terms">Acepto términos y condiciones</label>
                    </div>
                    <% if(locals.registerErrors && registerErrors.terms) {%>
                        <p class="errorMsg"><%= registerErrors.terms.msg %> </p>
                    <% } %>

                    <button type="submit">Listo</button>
                </form>
            </div>
        </div>
    </div>

</div>

<!-- !!! Scripts !!! -->
<script src="/javascript/userAccess_modal.js"></script>
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>